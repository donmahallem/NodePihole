.box
	.box-header.with-border
		h3.box-title {{$ctrl.title}}
	.box-body
		.chart
			canvas(class="chart chart-doughnut",chart-data="$ctrl.data",chart-labels="$ctrl.labels",chart-colors="$ctrl.colors",chart-options="$ctrl.options",width="400",height="200")
	.overlay(ng-show="$ctrl.isLoading")
		i.fa.fa-refresh.fa-spin