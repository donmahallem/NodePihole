alert(*ngIf="alertVisible",[type]="statusType",dismissible="true",(onClosed)="alertClosed($event)",dismissOnTimeout="5000")
.row
    .col-md-12
        .box.box-solid
            .box-header.with-border
                h3.box-title Recent Queries
            .box-body
                .table-responsive
                    ng-table([config]="config",(cellClicked)="onCellClick($event)",[rows]="rows",[columns]="columns",itemsPerPage="25")
                    pagination.pagination-sm([(ngModel)]='currentPage', [totalItems]='totalItems', [itemsPerPage]='itemsPerPage', [maxSize]='maxSize', [boundaryLinks]='true', [rotate]='false', (pageChanged)='onChangePage', (numPages)='numPages = $event')
            .overlay(*ngIf="isLoading")
                i.fa.fa-refresh.fa-spin